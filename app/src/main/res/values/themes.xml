<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Session1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4254BC</item>
        <item name="colorPrimaryVariant">#2E3A81</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8A5B6E</item>
        <item name="colorSecondaryVariant">#503540</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Session1.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_holder</item>
    </style>
    <style name="Theme.Session1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Session1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Session1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Session1.Main" parent="Theme.Session1">
        <item name="colorSecondary">#4254BC</item>
        <item name="colorSecondaryVariant">#2E3A81</item>
        <item name="colorPrimary">#8A5B6E</item>
        <item name="colorPrimaryVariant">#503540</item>
    </style>


</resources>